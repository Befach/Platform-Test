# ===========================================
# SUPABASE (Required)
# Get from: https://supabase.com/dashboard/project/_/settings/api
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# AI - OpenRouter (Required for AI features)
# Get from: https://openrouter.ai/keys
# ===========================================
OPENROUTER_API_KEY=your-openrouter-api-key

# ===========================================
# AI - OpenAI (For embeddings)
# Get from: https://platform.openai.com/api-keys
# ===========================================
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# AI - Parallel AI (For web search)
# ===========================================
PARALLEL_API_KEY=your-parallel-api-key
PARALLEL_SEARCH_API_KEY=your-parallel-search-api-key

# ===========================================
# EMAIL - SMTP (Optional, for invitations)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com

# ===========================================
# MCP Gateway (Optional)
# ===========================================
MCP_GATEWAY_URL=http://localhost:3100

# ===========================================
# UPSTASH REDIS (Required for rate limiting in production)
# Get from: https://console.upstash.com/redis
# Note: Falls back to mock limiter in development if not set
# ===========================================
UPSTASH_REDIS_REST_URL=https://your-project.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
